{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src",
    "src/**/*.ts",
    "tests/**/*.test.ts",
    "jest.setup.ts",
    "src/tests/types/jest-extended.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
